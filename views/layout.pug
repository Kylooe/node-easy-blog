doctype html
html
  head
    meta(charset='utf-8')
    title blog.title
    link(rel='stylesheet', href='//cdn.bootcss.com/semantic-ui/2.2.7/semantic.min.css')
    link(rel='stylesheet', href='/css/style.css')
    script(src='//cdn.bootcss.com/jquery/3.1.1/jquery.min.js')
    script(src='//cdn.bootcss.com/semantic-ui/2.2.7/semantic.min.js')
  body
    .nav
      .ui.grid
        .four.wide.column
        .eight.wide.column
          a(href='/posts')
            h1= blog.title
          p= blog.description
    .nav-setting
      .ui.buttons
        .ui.floating.dropdown.button
          i.icon.bars
          .menu
            if user
              a.item(href=`/posts?author=${user._id}`) 个人主页
              .divider
              a.item(href='/posts/create') 发表文章
              a.item(href='/signout') 登出
            else
              a.item(href='/signin') 登录
              a.item(href='/signup') 注册
    //- notification
    .ui.grid
      .four.wide.column
      .eight.wide.column
        if success
          .ui.success.message
            p= success
        if error
          .ui.error.message
            p= error
    block content
    script(type='text/javascript').
      $('.ui.dropdown').dropdown();
      $('.post-content .avatar').popup({
        inline: true,
        position: 'bottom right',
        lastResort: 'bottom right',
      });